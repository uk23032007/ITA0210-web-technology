<body>
    <h2>JavaScript Number Operations</h2>

    <div class="box">
        <p>Exponential Value (5e3): <span id="exp"></span></p>
    </div>

    <div class="box">
        <p>Limited Digits (3.141592 to 3 digits): <span id="fixed"></span></p>
    </div>

    <div class="box">
        <p>Convert Number to String (12345 → "12345"): <span id="str"></span></p>
    </div>

    <div class="box">
        <p>Return Negative Infinity: <span id="negInf"></span></p>
    </div>

    <script>
        // 1. Exponential value
        let expValue = 5e3;   // exponential format: 5 × 10³
        document.getElementById("exp").innerHTML = expValue;

        // 2. Limit digits after decimal
        let num = 3.141592;
        let fixedValue = num.toFixed(3);  // keep only 3 digits
        document.getElementById("fixed").innerHTML = fixedValue;

        // 3. Convert number to string
        let number = 12345;
        let strValue = number.toString();
        document.getElementById("str").innerHTML = strValue;

        // 4. Negative Infinity using Number object
        let negInfinity = Number.NEGATIVE_INFINITY;
        document.getElementById("negInf").innerHTML = negInfinity;
    </script>

